<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= csrf_meta_tags %>
</head>
<body id="store">
	<div id="banner">
          <%= image_tag("rails.png") %>
          <%= @page_title || "e-shopping" %>
	</div>
	<div id="collumns">
		<div id="side">
		<% if @cart %>
			<%= hidden_div_if(@cart.line_items.empty?, id:'cart') do %>
				<%= render @cart %>
			<% end %>
		<% end %>
			<%= link_to 'Home', store_url%><br />
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>

</body>
</html>
