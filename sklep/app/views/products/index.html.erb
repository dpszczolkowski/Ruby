<div id="product_list">
<h1>Lista produktow</h1>

<table>
<% @products.each do |product| %>
  <tr id="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>

    <td id="list_description">
      <dl>
        <dt><%= product.title %></dt>
        <dd><%= truncate(strip_tags(product.description),
               length: 80) %></dd>
      </dl>
    </td>

    <td id="list_actions">
      <%= link_to 'Pokaz', product %><br/>
      <%= link_to 'Edytuj', edit_product_path(product) %><br/>
      <%= link_to 'Usun', product, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'Nowy produkt', new_product_path %>

