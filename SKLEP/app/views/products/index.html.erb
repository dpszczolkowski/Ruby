<h1>Produkty</h1>

<table>
<% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>

    <td class="list_description">
      <dl>
        <dt><%= product.nazwa %></dt>
        <dd><%= truncate(strip_tags(product.opis),
               length: 80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Pokaz', product %><br/>
      <%= link_to 'Zmien', edit_product_path(product) %><br/>
      <%= link_to 'Usun', product, method: :delete,
                  data: { confirm: 'Jestes pewien?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nowy produkt', new_product_path %>
